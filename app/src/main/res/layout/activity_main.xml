<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start game"
        android:id="@+id/btnStart"
        />
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#aabbcc"
        android:rowCount="3"
        android:columnCount="3"
        android:id="@+id/gl"
        android:visibility="invisible"
        >
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="-"
            android:backgroundTint="#F64A4A"
            android:id="@+id/btn0_0"
            android:visibility="invisible"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="-"
            android:backgroundTint="#F64A4A"
            android:id="@+id/btn0_1"
            android:visibility="invisible"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="-"
            android:backgroundTint="#F64A4A"
            android:id="@+id/btn0_2"
            android:visibility="invisible"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="-"
            android:backgroundTint="#F64A4A"
            android:id="@+id/btn1_0"
            android:visibility="invisible"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="-"
            android:backgroundTint="#F64A4A"
            android:id="@+id/btn1_1"
            android:visibility="invisible"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="-"
            android:backgroundTint="#F64A4A"
            android:id="@+id/btn1_2"
            android:visibility="invisible"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="-"
            android:backgroundTint="#F64A4A"
            android:id="@+id/btn2_0"
            android:visibility="invisible"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="-"
            android:backgroundTint="#F64A4A"
            android:id="@+id/btn2_1"
            android:visibility="invisible"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="-"
            android:backgroundTint="#F64A4A"
            android:id="@+id/btn2_2"
            android:visibility="invisible"
            />

    </GridLayout>


</LinearLayout>